GridLayout:
    cols: 1
    ScreenManager:
        id: screen_manager
        transition: FadeTransition()
        MainScreen:
            name: "main_screen"
            id: main_screen
        FileDialogScreen:
            name: "file_dialog_screen"
            id: file_dialog_screen
        FileUpdateDialogScreen:
            name: "file_update_dialog_screen"
            id: file_update_dialog_screen
        FolderDialogScreen:
            name: "folder_dialog_screen"
            id: folder_dialog_screen
        ErrorScreen:
            name: "error_screen"
            id: error_screen